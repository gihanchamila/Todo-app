<%- include("partials/header") %>
    <div class="table-container">
        <h2 class="todo-title">Update todo</h2>
        <div>
            <a href="/" class="btn">Back</a>
            <form action="/update-todo/<%= todo._id %>" method="post">
                <div class="update-todo">
                    <div class="form-group">
                        <label for="title" class="text-light">Title</label>
                        <input type="text" name="title" value="<%= todo.title %>" placeholder="Type todo here" />
                    </div>
                    <div class="form-group">
                        <label for="description" class="text-light">Description</label>
                        <input type="text" name="description" value="<%= todo.description %>" placeholder="Type description here" />
                    </div>
                    <div class="form-group">
                        <button class="btn">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
<%- include("partials/header") %>